systemctl disable --now systemd-resolved
rm -f /etc/resolv.conf
printf "nameserver 127.0.0.1\n" > /etc/resolv.conf

cat > /etc/dnsmasq.conf <<EOF
interface=lo
bind-interfaces
listen-address=127.0.0.1
no-resolv
server=8.8.8.8
server=8.8.4.4
address=/cast.local/192.168.13.25
address=/bridge.local/192.168.13.25
server=/internal.example.com/192.168.13.25
EOF
sed -i 's/^\(\s*start_resolvconf.*\)$/# \1/' /usr/share/dnsmasq/systemd-helper
systemctl system-reload 
systemctl enable --now dnsmasq
